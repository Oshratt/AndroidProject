<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/oreng"/>
            <corners android:radius="20dp"/>
            <padding android:right="10dp"/>
            <gradient android:startColor="@color/oreng" android:endColor="@color/yellow"
                android:angle="45">

            </gradient>
            <stroke android:dashGap="@dimen/cardview_compat_inset_shadow"/>
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="20dp"/>
            <padding android:right="10dp"/>
            <stroke android:dashGap="@dimen/cardview_compat_inset_shadow"/>
        </shape>

    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/oreng1"/>
            <corners android:radius="20dp"/>
            <padding android:right="10dp"/>
            <stroke android:dashGap="@dimen/cardview_compat_inset_shadow"/>
            <gradient android:startColor="@color/graywhite" android:endColor="@color/graywhite"
                android:angle="45">
            </gradient>

        </shape>

    </item>
</selector>

